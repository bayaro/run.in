#!/bin/sh

USE_HOSTS_LIST_CACHE=1
RUN_IN_PARALLEL=0
SSH=0
while true; do
    case "$1" in
        -y) YES=1
            ;;
        -d) DEBUG=1
            ;;
        -g) PATTERN=$2
            shift
            ;;
        -s) SSH=1
            ;;
        -r) SYNCENV=1
            ;;
        -sr) SSH=1 SYNCENV=1
            ;;
        -sum) SHOW_SUMMARY=1 YES=1
            ;;
        -nocache) USE_HOSTS_LIST_CACHE=0
            ;;
        -par) RUN_IN_PARALLEL=1 YES=1 SSH=0
            ;;
        *) break
            ;;
    esac
    shift
done

HOSTS_LIST_CACHE="/tmp/`basename $0`.cache"

verbose() {
    if [ -e "$1" ]; then
        TO="$1"
        shift
    else
        TO=/dev/stderr
    fi
    echo "\033[0;35m$@\033[0;0m" >> "$TO"
}
if [ $SSH -eq 1 ]; then
    REMOTE_CMD=ssh
else
    REMOTE_CMD="$@"
    if [ ${#REMOTE_CMD} -eq 0 ]; then USE_HOSTS_LIST_CACHE=0; fi
fi

PROFILE=`basename $0 | sed -E 's/run.in.(.*).sh/\1/'`

if [ ! -e "$HOSTS_LIST_CACHE" ] || [ $USE_HOSTS_LIST_CACHE -ne 1 ]; then
    verbose ">>>>>> $REMOTE_CMD"
    HOSTS=`aws --output text --profile $PROFILE --region eu-west-1 ec2 describe-instances \
        --query 'Reservations[*].Instances[*].[PrivateIpAddress,NetworkInterfaces[*].PrivateIpAddresses,Tags,State.Name,Platform,InstanceId]'`
        #--instance-ids i-0f98c3e67f0f50bde \
else
    verbose "CACHED >>>>>> $REMOTE_CMD"
    HOSTS=`cat "$HOSTS_LIST_CACHE"`
fi
if [ $? -ne 0 ]; then
    exit 1
fi
echo "$HOSTS" > "$HOSTS_LIST_CACHE"

HOSTS=`echo "$HOSTS" | grep -E '^(Env|Name|True\s*|10\.10|None)'`
HOSTS=`echo "$HOSTS" | awk '{
        split($0,a," ");
        if ( a[1] == "Name" ) { host[0] = a[2] ? a[2] : "empty" }
        else if ( a[1] == "Environment" ) { host[1] = a[2] ? a[2] : "empty" }
        else if ( a[1] == "True" ) {
            if ( a[3] != host["ip"] ) host[2] = host[2]","a[3]
        }
        else {
            if ( host["ip"] ) {
                printf "%s##%s##%s##%s##%s##%s##%s\n",host[1],host[0],host["ip"],host["state"],host["Platform"],host["aid"],host[2]
                delete host
            }
            host[0] = "?"; host[1] = "?"
            if ( a[5] != "" ) {
                delete a[1]
                n = ""
                for (i in a) {
                    n = n " " a[i]
                }
                split(n,a," ")
            }
            host["ip"] = a[1]
            host["state"] = a[2]
            if ( a[3] == "None" ) a[3] = "-"
            host["Platform"] = a[3]
            host["aid"] = a[4]
        }
    } END {
        printf "%s##%s##%s##%s##%s##%s##%s\n",host[1],host[0],host["ip"],host["state"],host["Platform"],host["aid"],host[2]
    }' | sort -g`
HOSTS=`echo "$HOSTS" | sed 's/##,/##/g'`
#echo "$HOSTS=="
if [ ! -z "$PATTERN" ]; then
    HOSTS=`echo "$HOSTS" | grep -E "$PATTERN"`
    if [ "x$HOSTS" = "x" ]; then
        verbose "There are no hosts that contains '$PATTERN' in its description"
        exit 1
    fi
fi

if [ -z "$2" ] && [ "x$REMOTE_CMD" = "x" ]; then
    echo "$HOSTS" | sed 's/##/ /g' | sort -k 1 | awk -F ' ' '{printf "===> %-15s %20s %s: %s (%s %s) %s\n",$3,$6,$1,$2,$4,$5,$7}' | grep --color=auto -E "$PATTERN"
    exit 0
fi

add_key() {
    cat ~/.ssh/id_rsa.pub | ssh $host 'if [ ! -d .ssh ]; then mkdir .ssh; fi ; cat > ~/.ssh/authorized_keys'
}

function process_host() {
    verbose $1 "--------------------------------------------------------------------------------"
    verbose $1 `echo $h | sed 's/##/ /g' | awk -F ' ' '{printf "===> %-15s %20s %s: %s (%s %s) %s\n",$3,$6,$1,$2,$4,$5,$7}' | grep --color=always -E "$PATTERN"`
    state=`echo $h | awk -F '##' '{print $4}'`
    if [ "$state" != "running" ]; then continue; fi
    platform=`echo $h | awk -F '##' '{print $5}'`
    if [ "$platform" != "-" ]; then continue; fi

    env=`echo $h | awk -F '##' '{print $1}'`
    name=`echo $h | awk -F '##' '{print $2}'`
    otherip=`echo $h | awk -F '##' '{print $7}'`
    verbose $1 " $otherip"

    while [ true ]; do
        if [ $SSH -eq 1 ]; then
            if [ ! -z "$SYNCENV" ]; then
                (cd ~/bin && rsync -a -e ssh .bashrc .bash_profile .bash_completion vim/.vimrc baya@$ip:)
            fi
            ssh -o StrictHostKeyChecking=no -o ConnectTimeout=2 baya@$ip
        else
            echo "$UNIQUESTRINGTOCALCTOTAL" >> "$SHOW_SUMMARY_LOG"
            ssh -o StrictHostKeyChecking=no -o ConnectTimeout=2 baya@$ip -qo PasswordAuthentication=no $REMOTE_CMD 2>&1 | tee -a "$SHOW_SUMMARY_LOG"
        fi
        RES=$?
        if [ $RES -eq  0 ]; then break; fi

        verbose $1 "ERROR: $RES"
        if [ "x$RES" = "x" ] && [ "x$otherip" != "x" ]; then
            ip=`echo "$otherip" | awk -F ',' '{print $1}'`
            otherip=`echo "$otherip" | sed -E 's/^[^,]*,*(.*)$/\1/'`
            verbose $1 "===> Using other ip $ip ..."
            continue
        fi

        if [ "x$YES" = "x1" ]; then
            break
        fi
        verbose "Continue? [y/N]"
        read y
        if [ "x$y" != "xy" ]; then
            verbose "ABORTED"
            exit 1
        else
            break
        fi
        #if [ $? -ne 0 ]; then
        #    add_key
        #    ssh $ip $REMOTE_CMD
    done
}

ME=`basename $0`
if [ "x$SHOW_SUMMARY" = "x1" ]; then
    if [ ! -z "$DEBUG" ]; then
        SHOW_SUMMARY_LOG="/tmp/$ME.summary"
        rm -rf "$SHOW_SUMMARY_LOG"
    else
        SHOW_SUMMARY_LOG=`mktemp /tmp/$ME.summary.XXXXXXXX`
    fi
else
    SHOW_SUMMARY_LOG="/dev/null"
fi

if [ $RUN_IN_PARALLEL -eq 1 ]; then
    if [ ! -z "$DEBUG" ]; then
        LOGDIR="/tmp/$ME.logs"
        rm -rf "$LOGDIR"
        mkdir -p "$LOGDIR"
    else
        LOGDIR=`mktemp -d /tmp/$ME.XXXXXXXX`
    fi
fi

if [ -z "$DEBUG" ]; then
    trap 'rm -rf "'$SHOW_SUMMARY_LOG'" "'$LOGDIR'"; echo ; exit $?' 0 1 2 3 6 14 15
fi

UNIQUESTRINGTOCALCTOTAL="################## TOTAL"

for h in $HOSTS; do
    ip=`echo $h | awk -F '##' '{print $3}'`
    if [ $RUN_IN_PARALLEL -ne 1 ]; then
        process_host
        continue
    fi

    LF="$LOGDIR/$ip"
    echo > "$LF"
    printf " $ip"
    echo $( process_host "$LF" ) >> "$LOGDIR/$ip" &
done

wait $WAITFOR

SUMMARY=`cat "$SHOW_SUMMARY_LOG" | sort | uniq -c | sort -rn`
TOTAL=`echo "$SUMMARY" | grep "$UNIQUESTRINGTOCALCTOTAL"`
SUMMARY=`echo "$SUMMARY" | grep -v "$UNIQUESTRINGTOCALCTOTAL"`
if [ $RUN_IN_PARALLEL -eq 1 ]; then
    echo
    old_IFS=$IFS      # save the field separator
    cd "$LOGDIR"
    list=`ls`
    files=`grep -l " windows)" *`
    for F in $files; do
        list=`echo "$list" | grep -v $F`
        cat "$F"
    done
    IFS=$'\n'
    for S in $SUMMARY; do
        S=`echo "$S" | sed -E 's/^ *[0-9]* *(.*)$/\1/'`
        files=`grep -l "$S" *`
        for F in $files; do
            list=`echo "$list" | grep -v $F`
            cat "$F"
        done
    done
    IFS=$old_IFS
    for F in $list; do
        cat "$F"
    done
fi

verbose "DONE"

if [ "x$SHOW_SUMMARY" = "x1" ]; then
    HC=`echo "$HOSTS" | wc -l | awk '{print $1}'`
    echo
    printf -- "------ SUMMARY of %3d hosts -------------\n" $HC
    echo "$SUMMARY"
    echo "$TOTAL" | tr -d '#' # see UNIQUESTRINGTOCALCTOTAL
    echo     "------ SUMMARY END ----------------------"
fi
